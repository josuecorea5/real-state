extends ../layout/index

block contain
  .py-10 
    h1.text-4xl.my-5.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl= page

    .mt-8.mx-auto.max-w-md 
      .bg-white.py-8.px-4.shadow 
        form(method="POST").space-y-5 
          input(type="hidden", name="_csrf" value= csrfToken)
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Nueva contraseña
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="nueva contraseña" type="password" name="password")
            if errors 
              each e in errors 
                if e.name == "password"
                  p.text-red-600=e.msg

          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar password")